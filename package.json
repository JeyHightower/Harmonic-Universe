{
  "name": "harmonic-universe",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && flake8",
    "lint:frontend": "cd frontend && npm run lint",
    "preview": "vite preview",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && flask run",
    "start:frontend": "cd frontend && npm start",
    "test": "npm run test:backend && npm run test:frontend && npm run test:e2e",
    "test:backend": "cd backend && pytest --cov=app --cov-report=term-missing --cov-report=xml",
    "test:frontend": "cd frontend && npm run test:coverage",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:watch": "cd frontend && npm run test:watch",
    "test:security": "cd backend && pytest tests/test_security.py",
    "test:performance": "cd backend && pytest tests/test_performance.py",
    "test:websocket": "cd backend && pytest tests/test_websocket.py",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && black .",
    "format:frontend": "cd frontend && prettier --write \"src/**/*.{js,jsx}\"",
    "ci": "npm run lint && npm test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.0",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "tone": "^14.7.77",
    "concurrently": "^8.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "latest",
    "cypress": "14.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "vite": "^5.0.8",
    "vitest": "^1.2.2",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.8.0"
  },
  "description": "A collaborative platform for creating and sharing musical universes",
  "main": "cypress.config.js",
  "directories": {
    "doc": "docs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "backend/**/*.py": ["black", "flake8"],
    "frontend/src/**/*.{js,jsx}": ["prettier --write", "eslint --fix"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run ci"
    }
  }
}
