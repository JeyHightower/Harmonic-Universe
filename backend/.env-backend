# Harmonic Universe Backend Environment Variables
# This file should be copied to .env for local development

# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001
PYTHONPATH=.

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/harmonic_universe
# Test database for running tests
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/harmonic_universe_test

# Security Configuration
SECRET_KEY=dev-secure-key-please-change-in-production-9283742938
JWT_SECRET_KEY=jwt-secure-key-please-change-in-production-1234567890

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_SUPPORTS_CREDENTIALS=true

# Application Configuration
AUTO_CREATE_TABLES=True

# Logging Configuration
LOG_LEVEL=DEBUG
ENABLE_DEBUG_LOGGING=True

# Feature Flags
ENABLE_MFA=False
ENABLE_PASSWORD_RESET=True
ENABLE_ACCOUNT_LOCKOUT=True
MOCK_AUTH_IN_DEV=False
DEMO_MODE=False
OFFLINE_MODE=True
DEBUG_MODE=True
ANALYTICS=False
PERFORMANCE_MONITORING=False

# Static Files
STATIC_FOLDER=static 