# Backend Configuration
FLASK_APP=backend/app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DATABASE_URL=postgresql://user:password@localhost:5432/harmonic_universe
REDIS_URL=redis://localhost:6379/0

# Frontend Configuration
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000/ws
VITE_APP_VERSION=1.0.0

# Security Configuration
SESSION_COOKIE_SECURE=true
FORCE_HTTPS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_STRATEGY=fixed-window
RATELIMIT_DEFAULT=200 per day;50 per hour;1 per second
RATELIMIT_HEADERS_ENABLED=true

# AI/ML Configuration
OPENAI_API_KEY=your-openai-key-here

# Audio Processing
AUDIO_SAMPLE_RATE=44100
MAX_AUDIO_LENGTH=300

# Security
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# Testing
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/harmonic_universe_test
