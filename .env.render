# Database Configuration
DATABASE_URL=postgres://postgres:${POSTGRES_PASSWORD}@postgres:5432/harmonic_universe
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=harmonic_universe

# Application Settings
FLASK_APP=app
FLASK_ENV=production
SECRET_KEY=your_production_secret_key_here
DEBUG=False

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600
CORS_ORIGIN=https://harmonic-universe.onrender.com

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATELIMIT_DEFAULT=100/minute
RATELIMIT_STORAGE_URL=memory://

# Frontend Configuration
REACT_APP_API_URL=https://harmonic-universe-api.onrender.com/api
REACT_APP_WS_URL=wss://harmonic-universe-api.onrender.com/ws

# Performance
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
GUNICORN_MAX_REQUESTS=1000

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# Cache Configuration
REDIS_URL=redis://redis:6379/0
CACHE_TYPE=redis
CACHE_REDIS_URL=${REDIS_URL}

# Email Configuration (if needed)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Storage (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET=your-bucket-name
