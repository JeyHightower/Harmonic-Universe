# API Configuration
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# Authentication
VITE_AUTH_TOKEN_EXPIRY=86400000
VITE_REFRESH_TOKEN_EXPIRY=604800000
VITE_AUTH_COOKIE_DOMAIN=localhost
VITE_AUTH_COOKIE_SECURE=false
VITE_AUTH_COOKIE_SAMESITE=strict

# Security
VITE_ENABLE_HTTPS=false
VITE_RATE_LIMIT_WINDOW=900000
VITE_RATE_LIMIT_MAX_REQUESTS=100
VITE_PASSWORD_MIN_LENGTH=8
VITE_PASSWORD_MAX_LENGTH=128
VITE_PASSWORD_REQUIRE_UPPERCASE=true
VITE_PASSWORD_REQUIRE_LOWERCASE=true
VITE_PASSWORD_REQUIRE_NUMBERS=true
VITE_PASSWORD_REQUIRE_SYMBOLS=true

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=false
VITE_ERROR_REPORTING_LEVEL=error
VITE_ERROR_REPORTING_ENDPOINT=

# Feature Flags
VITE_ENABLE_MFA=false
VITE_ENABLE_PASSWORD_RESET=true
VITE_ENABLE_ACCOUNT_LOCKOUT=true

# Development
VITE_ENABLE_DEBUG_LOGGING=false
VITE_MOCK_AUTH_IN_DEV=false

# Session Management
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_SESSION_KEEPALIVE=true
VITE_SESSION_RENEW_THRESHOLD=300000

# CORS Settings
VITE_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH
VITE_CORS_ALLOWED_HEADERS=Content-Type,Authorization
VITE_CORS_EXPOSE_HEADERS=Content-Length,Content-Type

# Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_MONITORING=false
VITE_MONITORING_SAMPLE_RATE=0.1 